<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplikacja_gierki.Views.TournamentResultsPage"
             Title="Wyniki Turnieju">
    <ScrollView>
        <VerticalStackLayout Padding="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Wyniki Turnieju" FontSize="Large" HorizontalOptions="Center" />
            <CollectionView x:Name="ResultsCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="10">
                            <Label Text="{Binding Name}" FontSize="Medium" FontAttributes="Bold" />
                            <Label Text="{Binding TotalPoints, StringFormat='Punkty: {0}'}" FontSize="Small" />
                            <Label Text="{Binding RacesParticipated, StringFormat='Liczba wyścigów: {0}'}" FontSize="Small" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Zapisz Turniej" Clicked="OnSaveTournamentClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
