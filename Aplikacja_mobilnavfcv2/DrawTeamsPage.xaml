<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplikacja_gierki.Views.DrawTeamsPage"
             Title="Losowanie Zespołów">
    <Grid>
        <!-- Background Image -->
        <Image Source="Resources/Images/tlo.jpg" Aspect="AspectFill"
               VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
        <StackLayout Padding="20">
            <Label Text="Wpisz imiona graczy:" FontSize="Large" HorizontalOptions="Center" />
            <StackLayout x:Name="PlayersStackLayout" />
            <Button Text="Losuj Zespoły" Clicked="OnDrawTeamsClicked" />
        </StackLayout>
    </Grid>
</ContentPage>
